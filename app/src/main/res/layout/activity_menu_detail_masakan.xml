<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuDetailMasakan"
    android:background="@color/colorBest1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            app:titleTextColor="@color/white"
            android:background="@color/colorPrimary"
            android:id="@+id/toolbar_detail_masakan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Recive App" />

        <ImageView
            android:id="@+id/img_menu"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/gadogado" />

        <TextView
            android:id="@+id/t_view_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gado-Gado"
            android:textColor="@color/colorBest2"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:padding="5dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bahan-Bahan"
                    android:textColor="@color/colorBest2"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/t_view_bahan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:textSize="15sp"
                    android:text="-kangkung.\n-kacang panjang.\n-daun pisang.\n-kol, iris.\n-labu siam, potong.\n-Toge.\n-jagung manis, rebus, serut.\n-tempe, potong tebal.\n-tahu.\n-Bumbu kacang:\n-Cabai rawit (sesuai selera).\n-1 sdt garam.\n-Gula merah.\n-2 sdm kacang goreng giling.\n-1 jeruk limau, peras airnya."/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cara Membuat"
                    android:textColor="@color/colorBest2"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/t_view_caramasak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:textSize="15sp"
                    android:text="Rebus semua sayuran, angkat, tiriskan.\n-Goreng tempe dan tahu sampai kecoklatan.\n-Ulek semua bahan bumbu kacang sampai halus, cek rasa. Lalu kucuri jeruk limau.\n-Tambahkan sayur-sayuran, tempe tahu. Lalu aduk dan campurkan jadi satu dengan bumbu kacang.\n-Tata gado-gado pada piring, tambahkan telur rebus dan kerupuk."/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi"
                    android:textColor="@color/colorBest2"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/t_view_deskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:textSize="15sp" />
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:weightSum="2"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_weight="1"
            android:id="@+id/txtMskn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Mencoba!"
            android:textColor="@color/colorBest2"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="match_parent"
                android:backgroundTint="@color/red"
                android:layout_marginEnd="10dp"
                android:layout_marginVertical="3dp"
                android:id="@+id/hapus"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/ic_baseline_delete_24"
                android:layout_height="wrap_content" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="match_parent"
                android:layout_marginVertical="3dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="end|center_vertical"
                android:id="@+id/edit_menu"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>





</LinearLayout>